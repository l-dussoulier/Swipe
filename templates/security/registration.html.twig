{% extends 'base.html.twig' %}
{% block body %}
  <h1> Inscription </h1>

  {{ form_start(form) }}
  {{ form_row(form.nom, {'label': ' ', 'attr':{'placeholder': 'Nom'}}) }}
  {{ form_row(form.prenom, {'label': ' ', 'attr':{'placeholder': 'Prenom'}}) }}
  {{ form_row(form.username, {'label': ' ', 'attr':{'placeholder': 'Pseudo'}}) }}
  {{ form_row(form.email, {'label': ' ', 'attr':{'placeholder': 'Email'}}) }}
  {{ form_row(form.telephone, {'label': ' ', 'attr':{'placeholder': 'Téléphone'}}) }}
